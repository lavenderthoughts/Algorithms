#include<string.h>
#include<stdio.h>
#include<stdlib.h>

void sel(char *str[],int count)
{
	int i,j;
	for(i=0;i<=count-2;i++)
	{
		int min=i;
		for(j=i+1;j<=count-1;j++)
		{
			if(strcmp(str[min],str[j])==1)
			{
				min=j;
			}
		}
	    printf("Pass: %d -  %s with %s \n", i + 1, str[i], str[min]);
		
		swap(&str[min],&str[i]);
	}
}
void swap(char **str1, char **str2) {
    char *temp = *str1;
    *str1 = *str2;
    *str2 = temp;
}
int main()
{
	int i=0; 
	int count=0;
	char str[]="be the way you wanna be";
	/*while(str[i]!='\0')
	{
