		{
			count++;
		}
		i++;
	}
	printf("%d",count);*/ //alternate to find count 
	
	char *words[50];
	count=0;
	char *token=strtok(str," ");
	while(token != NULL)
	{
		words[count++]=token;
		token=strtok(NULL," ");
	}
	
	sel(words,count);
	for (i = 0; i <=count-1; i++) 
